# Catalog Microservice Configuration
# Copy this file to .env and fill in the values

# Service Configuration
NODE_ENV=production
SERVICE_NAME=catalog-microservice
PORT=3200
DOMAIN=catalog.statex.cz

# Database Configuration (shared database-server)
DB_HOST=db-server-postgres
DB_PORT=5432
DB_USER=dbadmin
DB_PASSWORD=
DB_NAME=catalog_db
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis Configuration (shared database-server)
REDIS_HOST=db-server-redis
REDIS_PORT=6379

# External Shared Microservices
AUTH_SERVICE_URL=https://auth.statex.cz
LOGGING_SERVICE_URL=https://logging.statex.cz
NOTIFICATION_SERVICE_URL=https://notifications.statex.cz

# JWT Configuration (must match auth-microservice)
JWT_SECRET=

# Logging
LOG_LEVEL=info
LOG_TIMESTAMP_FORMAT=YYYY-MM-DD HH:mm:ss

# CORS
CORS_ORIGIN=https://catalog.statex.cz,https://allegro.statex.cz,https://flipflop.statex.cz
